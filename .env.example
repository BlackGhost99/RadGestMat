# Example .env for production deployment
# REQUIRED
SECRET_KEY=replace-me-with-a-secure-random-value
DB_ENGINE=django.db.backends.postgresql
DB_NAME=radgestmat
DB_USER=radgestmat_user
DB_PASSWORD=radgestmat_password
DB_HOST=db
DB_PORT=5432
ALLOWED_HOSTS=your.domain.tld,www.your.domain.tld

# Optional
REDIS_URL=redis://redis:6379/1
SENTRY_DSN=
QR_DOMAIN=https://your.domain.tld
SECURE_SSL_REDIRECT=True
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-user
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=RadGestMat <noreply@your.domain.tld>

# Other
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
